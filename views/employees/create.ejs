<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/styles.css">
<h1 style="margin: 10px 10px 10px 5px;">Create Employee</h1>
<form action="/employees/create" method="POST" enctype="multipart/form-data">
    <label for="uniqueId">Unique ID:</label>
    <input type="text" name="uniqueId" id="uniqueId" required><br>

    <label for="image">Image:</label>
    <input type="file" name="image" id="image"><br>

    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required><br>

    <label for="email">Email:</label>
    <input type="email" name="email" id="email" required><br>

    <label for="mobile">Mobile:</label>
    <input type="text" name="mobile" id="mobile" required><br>

    <label for="designation">Designation:</label>
    <input type="text" name="designation" id="designation" required><br>

    <label for="gender">Gender:</label>
    <select name="gender" id="gender" required>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select><br>

    <label for="course">Course:</label>
    <input type="text" name="course" id="course" required><br>

    <button type="submit">Create</button>
</form>

