<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/styles.css">
<h1>Edit Employee</h1>
<form method="post" action="/employees/edit/<%= employee._id %>?_method=PATCH" novalidate class="needs-validation">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= employee.name %>" required><br>

    <label for="email">Email:</label>
    <input type="email" name="email" id="email" value="<%= employee.email %>" required><br>

    <label for="mobile">Mobile:</label>
    <input type="text" name="mobile" id="mobile" value="<%= employee.mobile %>" required><br>

    <label for="designation">Designation:</label>
    <input type="text" name="designation" id="designation" value="<%= employee.designation %>" required><br>

    <label for="gender">Gender:</label>
    <select name="gender" id="gender">
        <option value="Male" <%= employee.gender === 'Male' ? 'selected' : '' %>>Male</option>
        <option value="Female" <%= employee.gender === 'Female' ? 'selected' : '' %>>Female</option>
        <option value="Other" <%= employee.gender === 'Other' ? 'selected' : '' %>>Other</option>
    </select><br>

    <label for="course">Course:</label>
    <input type="text" name="course" id="course" value="<%= employee.course %>" required><br>

    <button type="submit">Update</button>
</form>

<%- include('../includes/footer.ejs') %>
